@using Merchandising.DTO.Models;
@model  Merchandising.DTO.Models.Users
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>EGV | Login</title>
    <link href="~/Images/EGV/glass.ico" rel="shortcut icon" type="image/x-icon" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    @*<link href="~/Fonts/font-awesome/css/font-awesome.css" rel="stylesheet">*@
    <link rel="stylesheet" type="text/css" href="~/Content/logincss/main.css">
    <link rel="stylesheet" type="text/css" href="~/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="~/Content/logincss/util.css">
    <link rel="stylesheet" type="text/css" href="~/Scripts/LoginJS/animate/animate.css">
    <link rel="stylesheet" type="text/css" href="~/Scripts/LoginJS/css-hamburgers/hamburgers.min.css">
    <link rel="stylesheet" type="text/css" href="~/Scripts/LoginJS/select2/select2.min.css">
</head>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <body class="gray-bg">
        <div class="limiter">
            <div class="container-login100">
                <div class="wrap-login100">
                    <div class="login100-pic js-tilt" data-tilt>
                        <img src="~/Images/EGV/egv hd logo.png" alt="EGV">
                    </div>

                    <form class="login100-form validate-form">
                        <span class="login100-form-title">
                            EGV Portal
                        </span>

                        <div class="wrap-input100 validate-input">
                            @*<input class="input100" type="text" placeholder="User ID" id="userid">*@
                            @Html.TextBoxFor(m => m.UserId, new { @class = "input100 text-uppercase", @placeholder = "User ID", id = "userid" })
                            <span class="focus-input100"></span>
                            <span class="symbol-input100">
                                <i class="fa fa-user" aria-hidden="true"></i>
                            </span>
                        </div>

                        <div class="wrap-input100 validate-input">
                            @*<input class="input100" type="password" placeholder="Password" id="passcode">*@
                            @Html.PasswordFor(m => m.Password, new { @class = "input100", @type = "password", @placeholder = "Password", id = "passcode" })
                            <span class="focus-input100"></span>
                            <span class="symbol-input100">
                                <i class="fa fa-lock" aria-hidden="true"></i>
                            </span>
                        </div>


                        <div class="container-login100-form-btn">
                            <button class="login100-form-btn btn-success" type="submit">
                                Login
                            </button>
                        </div>

                        <div class="text-center p-t-12">

                        </div>
                    </form>
                </div>
            </div>
        </div>

    </body>
}

</html>

@section Styles {
    @Styles.Render("~/plugins/footableStyles")
    @Styles.Render("~/Content/plugins/iCheck/iCheckStyles")
    @Styles.Render("~/plugins/toastrStyles")
    @Styles.Render("~/plugins/laddaStyles")
    @Styles.Render("~/plugins/sweetAlertStyles")
    @Styles.Render("~/Content/plugins/chosen/chosenStyles")
    <link href="~/Content/bootstrap-datetimepicker.min.css" rel="stylesheet" />
}


@section Scripts{
    @Scripts.Render("~/plugins/footable")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/plugins/peity")
    @Scripts.Render("~/plugins/iCheck")
    @Scripts.Render("~/plugins/toastr")
    @Scripts.Render("~/plugins/ladda")
    @Scripts.Render("~/plugins/sweetAlert")
    @Scripts.Render("~/plugins/chosen")
    <script src="~/Scripts/moment.js"></script>
    <script src="~/Scripts/bootstrap-datetimepicker.min.js"></script>
    <script src="~/Scripts/LoginJS/main.js"></script>

    <script type="text/javascript">

        $('.chosen-select').chosen({ width: "100%" });

        // Bind normal buttons
        Ladda.bind('.ladda-button', { timeout: 2000 });

    </script>
}
